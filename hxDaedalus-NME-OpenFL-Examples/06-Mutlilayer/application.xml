<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Doune Castle" package="lib.hxDaedalus.examples" version="1.0.0" company="JLM" />

	<!-- output -->
	<app main="Main" path="bin" file="douneCastle" />

	<!-- window properties -->
	<window background="#333333" fps="60" />
	<window width="1024" height="780" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<set name="SWF_VERSION" value="11.2" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	
	<haxelib name="openfl" />
	<haxelib name="hxDaedalus" />
	<haxelib name="polygonal-ds" />
	<haxelib name="polygonal-ai" />
	<assets path="assets/randomHitMesh0_256.gif" rename="Bm0" if="html5" />
	<assets path="assets/randomHitMesh1_256.gif" rename="Bm1" if="html5" />
	<assets path="assets/randomHitMesh2_256.gif" rename="Bm2" if="html5" />
	<assets path="assets/randomHitMesh3_256.gif" rename="Bm3" if="html5" />
	<assets path="assets/randomHitMesh4_256.gif" rename="Bm4" if="html5" />

	<!-- optimize output
	<haxeflag name="-dce full" /> -->

</project>